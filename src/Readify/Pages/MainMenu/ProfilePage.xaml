<UserControl x:Class="Readify.Pages.MainMenu.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Readify.Pages.MainMenu"
             xmlns:main="clr-namespace:Readify.ViewModels.MainMenu" 
             d:DataContext="{d:DesignInstance Type=main:ProfileViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    <Grid>
        <Border>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Padding="30 0">
                        <StackPanel>
                            <Border HorizontalAlignment="Center" 
                                   Height="300" Width="300" Background="#EFEFEF"
                                   CornerRadius="100">
                                <Border.Clip>
                                    <EllipseGeometry Center="150,150" RadiusX="150" RadiusY="150"/>
                                </Border.Clip>

                                <Grid>
                                    <Image Source="{Binding CurrentUserAvatarBytes, Converter={StaticResource ImageConverter}}"
                                          Stretch="UniformToFill"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                        <Image.RenderTransform>
                                            <TransformGroup>
                                                <TranslateTransform X="0" Y="0"/>
                                            </TransformGroup>
                                        </Image.RenderTransform>
                                    </Image>
                                </Grid>
                            </Border>
                            <TextBlock Margin="0 20 0 0" Text="{Binding CurrentName}" 
                                       FontWeight="Bold" FontFamily="{StaticResource Inter}"
                                       FontSize="20"/>
                            <TextBlock Text="{Binding CurrentUsername}" 
                                       FontWeight="Light" FontFamily="{StaticResource Inter}"
                                       FontSize="18" Foreground="#595959"/>

                            <Button Content="Обновить профиль" Style="{StaticResource UpdateUserButton}" 
                                    Command="{Binding EditUserCommand}"
                                    Visibility="{Binding IsEditButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Content="Подписаться" Style="{StaticResource UpdateUserButton}" 
                                    Command="{Binding FollowUserCommand}"
                                    Visibility="{Binding IsFollowButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Content="Отписаться" Style="{StaticResource UpdateUserButton}" 
                                    Command="{Binding UnfollowUserCommand}" 
                                    Visibility="{Binding IsUnfollowButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <TextBlock Margin="0 5 0 0" Text="{Binding SubsText}" 
                                   FontWeight="Bold" FontFamily="{StaticResource Inter}"
                                   FontSize="15"/>

                            <TextBlock Margin="0 5 0 0" Text="{Binding LikesText}" 
                                   FontWeight="Bold" FontFamily="{StaticResource Inter}"
                                   FontSize="15"/>

                            <TextBlock Margin="0 5 0 0" Text="{Binding ReviewsText}" 
                                   FontWeight="Bold" FontFamily="{StaticResource Inter}"
                                   FontSize="15"/>
                            <Border Margin="0 15 0 0" Background="#EFEFEF" MinHeight="100" CornerRadius="11" Padding="15">
                                <TextBlock TextWrapping="Wrap" FontFamily="{StaticResource Inter}" FontWeight="SemiBold"
                                   Text="{Binding CurrentDescriptrion}" FontSize="15"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border  Padding="30 0" Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="315"/>
                                <RowDefinition Height="315"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0">
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="Отзывы о книгах" FontFamily="{StaticResource Inter}"
                                       FontWeight="Bold" FontSize="20"/>
                                    <TextBlock Text="Показать все →" TextDecorations="Underline" FontFamily="{StaticResource Inter}"
                                       FontWeight="Regular" FontSize="20" HorizontalAlignment="Right"
                                       Foreground="#0B6BD7" Cursor="Hand"/>
                                </DockPanel>
                                <ListView Height="270" Margin="0 10 0 0">

                                </ListView>
                            </StackPanel>
                            <StackPanel Grid.Row="1">
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="Добавленные книги" FontFamily="{StaticResource Inter}"
                                       FontWeight="Bold" FontSize="20"/>
                                    <TextBlock Text="Показать все →" TextDecorations="Underline" FontFamily="{StaticResource Inter}"
                                       FontWeight="Regular" FontSize="20" HorizontalAlignment="Right"
                                       Foreground="#0B6BD7" Cursor="Hand"/>
                                </DockPanel>
                                <ListView Height="270" Margin="0 10 0 0">

                                </ListView>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
